<p id="notice"><%= notice %></p>

<h1>Bukus</h1>

<table>
  <thead>
    <tr>
      <th>Penulis</th>
      <th>Judul</th>
      <th>Kota</th>
      <th>Penerbit</th>
      <th>Tahun</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bukus.each do |buku| %>
      <tr>
        <td><%= buku.penulis %></td>
        <td><%= buku.judul %></td>
        <td><%= buku.kota %></td>
        <td><%= buku.penerbit %></td>
        <td><%= buku.tahun %></td>
        <td><%= link_to 'Show', buku %></td>
        <td><%= link_to 'Edit', edit_buku_path(buku) %></td>
        <td><%= link_to 'Destroy', buku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

